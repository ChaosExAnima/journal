{
	"name": "journal",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@draft-js-plugins/editor": "^4.1.0",
		"@draft-js-plugins/linkify": "^4.1.0",
		"@material-ui/core": "^4.11.3",
		"@material-ui/icons": "^4.11.2",
		"@testing-library/jest-dom": "^5.11.4",
		"@testing-library/react": "^11.1.0",
		"@testing-library/user-event": "^12.1.10",
		"@types/jest": "^26.0.15",
		"@types/node": "^12.0.0",
		"@types/react": "^16.9.53",
		"@types/react-dom": "^16.9.8",
		"dayjs": "^1.10.4",
		"draft-js": "^0.11.7",
		"draftjs-md-converter": "^1.4.2",
		"fastify": "^3.11.0",
		"fastify-cors": "^5.2.0",
		"fastify-helmet": "^5.1.0",
		"fastify-static": "^3.4.0",
		"immer": "^8.0.1",
		"lodash": "^4.17.20",
		"mobx": "^6.1.4",
		"mobx-react-lite": "^3.2.0",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-router-dom": "^5.2.0",
		"react-scripts": "4.0.1",
		"typescript": "^4.0.3",
		"web-vitals": "^0.2.4"
	},
	"scripts": {
		"start": "concurrently --kill-others-on-fail \"yarn client:start\" \"yarn server:watch\"",
		"client:start": "react-scripts start",
		"client:build": "react-scripts build",
		"client:test": "react-scripts test",
		"server:start": "node server/index.js",
		"server:watch": "nodemon -e ts --exec \"yarn server:dev\"",
		"server:build": "tsc --project server/tsconfig.json",
		"server:dev": "yarn server:build && yarn server:start"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest",
			"plugin:import/typescript",
			"plugin:@wordpress/eslint-plugin/recommended"
		],
		"settings": {
			"import/resolver": {
				"node": {
					"moduleDirectory": [
						"src",
						"node_modules"
					]
				}
			}
		},
		"rules": {
			"no-console": "warn",
			"no-unused-vars": "off",
			"prettier/prettier": "warn"
		},
		"ignorePatterns": [
			"**/*.js",
			"**/*.d.ts"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@tsconfig/node12": "^1.0.7",
		"@types/draft-js": "^0.10.44",
		"@types/lodash": "^4.14.168",
		"@types/react-router-dom": "^5.1.7",
		"@typescript-eslint/eslint-plugin": "^4.14.0",
		"@typescript-eslint/parser": "^4.14.0",
		"@wordpress/eslint-plugin": "^8.0.0",
		"concurrently": "^5.3.0",
		"eslint-config-react-app": "^6.0.0",
		"nodemon": "^2.0.7",
		"source-map-explorer": "^2.5.2"
	}
}
